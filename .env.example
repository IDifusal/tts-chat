APP_NAME=Kick TTS Bot
DEBUG=true
HOST=0.0.0.0
PORT=8000

KICK_CHANNEL=your_channel_here
KICK_WEBSOCKET_URL=wss://ws-us2.pusher.com/app/32cbd69e4b950bf97679

# ElevenLabs TTS (requerido)
# Plan Free: TTS incluido (10k créditos), pero por API solo funcionan voces con "free" en available_for_tiers
# o tus 3 voces propias (p. ej. clonadas). Lista voces: GET /api/elevenlabs/voices — usa un voice_id con usable_on_free_tier: true.
ELEVEN_LABS_API_KEY=
ELEVEN_LABS_VOICE_ID=86V9x9hrQds83qf7zaGn
ELEVEN_LABS_MODEL_ID=eleven_multilingual_v2
# Tono más sensual: estabilidad baja (más expresivo), velocidad un poco más lenta
# stability 0-1, similarity_boost 0-1, style 0-1, speed 0.7-1.2
ELEVEN_LABS_STABILITY=0.4
ELEVEN_LABS_SIMILARITY_BOOST=0.8
ELEVEN_LABS_STYLE=0.2
ELEVEN_LABS_SPEED=0.92

AUDIO_OUTPUT_DIR=./static/audio
SOUNDS_DIR=./static/sounds
CACHE_DIR=./static/cache
AUDIO_FORMAT=wav

ENABLE_REDIS_CACHE=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

MIN_MESSAGE_LENGTH=2
MAX_MESSAGE_LENGTH=200
COOLDOWN_SECONDS=2
IGNORE_COMMANDS=true
ENABLE_TTS=true
ENABLE_SOUNDS=true

WIDGET_SHOW_MESSAGES=true
WIDGET_MESSAGE_DURATION=5000
WIDGET_MAX_MESSAGES=3
